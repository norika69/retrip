        .expItem
          %h2 モジャインザハウス
        .expImg
          .user
            = image_tag("https://scontent.cdninstagram.com/t51.2885-19/s150x150/13549387_588092511351027_1757295247_a.jpg", class: "userImg")
            = link_to "yuna","", class: "userName"
            %span
          .imageArea
            = image_tag("https://static.retrip.jp/static/img/common/no_image.b9c11452e9e3.png", class: "image")
