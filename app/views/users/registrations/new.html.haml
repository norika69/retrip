#page
  = render partial: "articles/header"
  #mainHeader
    .content
      %ul.breadList
        %li.itemscope.itemtype
          = link_to "トップページ", root_path, class: "root"
          %nobr    >
        %li.itemscope.itemtype
          = link_to "RETRIPにアカウント登録","", class: "root"
  #main
    .contentTopTitle
      %h1 RETRIPにアカウント登録
    .content.login
      %aside
        = link_to "既に会員の方はこちら", new_user_session_path, class: "sign_up"
      %section.loginWrap.blockLogin#form
        %h2 メールアドレスで登録
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          %ul.mailLogin
            %li
            = f.text_field :user_id, autofocus: true, minlength: "3", placeholder: "ユーザーID(半角英数字・3文字以上)※変更不可",class: "form"
            %li
            = f.email_field :email, autofocus: true, placeholder:"ユーザーID/メールアドレス",class: "form"
            %li
            = f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form"
            %li
            = f.submit "新規登録", class: "submit"

      %section.loginWrap.blockRight
        %h2 SNSアカウントで新規登録
        %ul.snsLogin
          %li
            = link_to "Facebookで登録","", class: "facebook"
            %span.fa.fa-facebook
          %li
            = link_to "Twitterで登録","", class: "twitter"
            %span.fa.fa-twitter.bard
          %p.atention Facebook•Twitterに許可なく投稿されることはありません
      %p.agreement
        %nobr 登録すると、
        = link_to "利用規約","",class: "agree"
        および
        = link_to "プライバシーポリシー","", class: "agree"
        に同意したことになります
= render partial: "articles/footer"
